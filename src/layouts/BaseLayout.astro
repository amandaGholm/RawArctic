---
import Nav from "../components/Nav.astro";
import "../styles/global.css";
import "../styles/animation.css";
import Footer from "../components/Footer.astro";
const { ArcticFlyfishing } = Astro.props;
---

<html lang="da">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap"
      rel="stylesheet"
    />
    <meta
      name="description"
      content="Arctic Flyfishing tilbyder unikke rejser til Grønland.
       Oplev fluefiskeri og nærvær i den grønlandske natur"
    />
    <meta
      name="keywords"
      content="fluefisker, grønland, Flyfishing, rejse, all-inklusiv,  "
    />
    <title>{ArcticFlyfishing} ArcticFlyfishing</title>
  </head>

  <body>
    <Nav />
    <slot />
    <Footer />
  </body>
</html>
