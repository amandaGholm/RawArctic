---
import { Image } from "astro:assets";
import logoFisk from "../assets/images/logoFisk.svg";
import Button from "./Button.astro";
---

<header>
  <nav class="nav-desktop">
    <div>
      <a href="/"><Image src={logoFisk} alt="logofsik" /></a>
    </div>
    <ul class="ul-desktop">
      <li>
        <Button class="knap" heref="/" label="Læs mere" style="tertiary" />
      </li>
      <li>
        <Button class="knap" heref="/" label="Læs mere" style="tertiary" />
      </li>
      <li>
        <Button class="knap" heref="/" label="Læs mere" style="primary" />
      </li>
    </ul>
  </nav>

  <nav class="nav-mobil">
    <a href="/"><Image src={logoFisk} alt="logofsik" /></a>
    <span id="openNavBtn">&#9776;</span>
  </nav>

  <div id="myNav" class="overlay">
    <a href="/" id="closeBtn">&times;</a>

    <div class="overlay-content">
      <li>
        <Button class="knap" heref="/" label="Læs mere" style="tertiary" />
      </li>
      <li>
        <Button class="knap" heref="/" label="Læs mere" style="tertiary" />
      </li>
      <li>
        <Button class="knap" heref="/" label="Læs mere" style="primary" />
      </li>
    </div>
  </div>
</header>

<style>
  #closeBtn {
    text-decoration: none;
  }

  #openNavBtn {
    font-size: 30px;
    cursor: pointer;
    color: white;
  }

  .overlay {
    height: 100%;
    width: 100%;
    position: fixed;
    z-index: 1;
    top: 0;
    left: 0;
    background: rgba(23, 23, 23, 0.291);
    backdrop-filter: blur(20px);
    transition: 0.5s;
    display: none;
  }

  .overlay-content {
    position: relative;
    top: 10%;
    width: 100%;
    text-align: center;
    margin-top: 30px;
  }

  .overlay li {
    padding: 8px;
    text-decoration: none;
    display: block;
    transition: 0.3s;
  }

  /*  x-knappens placering og størrelsen */
  .overlay #closeBtn {
    position: absolute;
    top: 20px;
    right: 45px;
    font-size: 60px;
    color: white;
  }

  .nav-desktop {
    display: none;
  }

  .nav-mobil {
    display: flex;
    justify-content: space-between;
    padding: 16px;
    margin: 40px 24px 40px 24px;
  }
  header {
    position: fixed;
    z-index: 100;
    overflow: hidden;
    width: 100%;
  }

  @media (min-width: 699px) {
    .nav-mobil {
      display: none;
    }

    .overlay {
      display: none;
    }

    header {
      position: fixed;
      z-index: 100;
      overflow: hidden;
      width: 100%;
    }
    .nav-desktop {
      display: flex;
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(20px);
      border-radius: 2.5rem;
      justify-content: space-between;
      padding: var(--RA-size-12);
      margin: 40px 65px 40px 65px;
    }
    .ul-desktop {
      list-style: none;
      display: flex;
      flex-direction: row;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Definer funktionen openNav
    function openNav() {
      var myNav = document.getElementById("myNav");
      if (myNav) {
        myNav.style.display = "block";
      }
    }

    // Definer funktionen closeNav
    function closeNav() {
      var myNav = document.getElementById("myNav");
      if (myNav) {
        myNav.style.display = "none";
      }
    }

    // Find knappen til at åbne overlay og tilføj event listener
    var openNavBtn = document.getElementById("openNavBtn");
    if (openNavBtn) {
      openNavBtn.addEventListener("click", openNav);
    }

    // Find knappen til at lukke overlay og tilføj event listener
    var closeBtn = document.getElementById("closeBtn");
    if (closeBtn) {
      closeBtn.addEventListener("click", closeNav);
    }
  });
</script>
