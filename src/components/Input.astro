---
const { label, placeholder, type, autocomplete, inputId } = Astro.props;
---

<div class="inputField">
  <label for={inputId} class="inputLabel"> {label}</label>
  <input
    type={type}
    autocomplete={autocomplete}
    placeholder={placeholder}
    id={inputId}
    name="userInfo"
    class="inputClass"
  />
</div>

<style>
  .inputField {
    display: flex;
    flex-direction: column;
  }
  .inputClass {
    padding: 12px;
    border: none;
    border-radius: 10px;
  }

  .inputLabel {
    font-family: "Open Sans";
    font-size: 14px;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
  }
</style>
