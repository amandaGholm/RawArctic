---
const { style, label, href } = Astro.props;
---

<div class="button" style-variant={style}>
  <a href={href} class="button_label" label-variant={style}>{label}</a>
</div>

<style>
  .button {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    min-width: 135px;
    border-radius: 1.25rem;
    height: 40px;
    cursor: pointer;
    padding: 0 12px;
  }

  .button_label {
    font-family: Switzer;
    font-size: 1.125rem;
    font-style: normal;
    font-weight: 600;
    text-decoration: none;
    text-align: center;
  }

  /* style  label-variant bestemmer farven på teksten og style-variant bestemmer fraven på baggrunden*/

  /* primary-outline button  */
  [style-variant="primary"] {
    background-color: var(--RA-orange300);
  }
  [label-variant="primary"] {
    color: var(--RA-blue25);
  }

  /* --------------------- */

  /* primary-outline button  */
  [style-variant="primary-outline"] {
    background-color: var(--RA-orange300);
    border: 2px solid var(--RA-blue25);
  }

  [label-variant="primary-outline"] {
    color: var(--RA-blue25);
  }
  /* ------------------- */

  /* secondary button  */
  [style-variant="secondary"] {
    background-color: var(--RA-blue25);
    border: 2px solid var(--RA-blue300);
  }
  [label-variant="secondary"] {
    color: var(--RA-blue300);
  }
  /* ------------------------- */

  /* tertiary button  */
  [label-variant="tertiary"] {
    color: var(--RA-blue25);
  }
  /* ------------------ */
</style>
